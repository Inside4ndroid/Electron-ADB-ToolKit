{
  "name": "electron-adb-toolkit",
  "version": "1.0.0",
  "description": "An Electron-powered Android Debug Bridge (ADB) toolkit for device management",
  "main": "src/main/main.js",
  "scripts": {
    "start": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "vite build",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "electron",
    "adb",
    "android",
    "toolkit"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.8",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "extract-zip": "^2.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.electron.adb.toolkit",
    "productName": "Electron ADB Toolkit",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "dist-renderer/**/*",
      "package.json"
    ],
    "win": {
      "icon": "src/images/adb_logo.png",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "src/images/adb_logo.png",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "icon": "src/images/adb_logo.png",
      "target": [
        "AppImage"
      ]
    }
  }
}
